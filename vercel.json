{
  "version": 2,
  "builds": [
    {
      "src": "src/app/(routes)/**/*.ts*",
      "use": "@vercel/next"
    },
    {
      "src": "src/api/v1/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "src/api/v1/**/*.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/src/api/v1/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/app/(routes)/$1"
    }
  ],
  "redirects": [
    {
      "source": "/old-route",
      "destination": "/new-route",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}
